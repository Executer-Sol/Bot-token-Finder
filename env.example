# ============================================
# TELEGRAM - Configuração do Telegram
# ============================================
# Obtenha em: https://my.telegram.org/apps
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abcdef1234567890abcdef1234567890
TELEGRAM_PHONE=+5511999999999

# ID do canal/grupo para monitorar
# Opções:
# 1. ID do grupo (recomendado): -1001234567890
# 2. Nome do grupo: Meu Canal de Tokens
# 3. Username: @meucanal
TELEGRAM_CHANNEL=-1001234567890

# ============================================
# SOLANA - Configuração da Carteira
# ============================================
# Chave privada da sua carteira Solana (formato base58)
# ⚠️ NUNCA compartilhe esta chave!
# ⚠️ Use uma carteira SEPARADA apenas para o bot!
SOLANA_PRIVATE_KEY=

# RPC URL da Solana (recomendado: Alchemy)
# Opção 1: Alchemy (recomendado - mais rápido)
# Obtenha em: https://www.alchemy.com/
RPC_URL=https://solana-mainnet.g.alchemy.com/v2/SEU_API_KEY_AQUI

# Opção 2: RPC público (mais lento, pode ter rate limits)
# RPC_URL=https://api.mainnet-beta.solana.com

# ============================================
# TRADING - Valores de Compra por Score
# ============================================
# Score 15-17: Valor em SOL para investir
AMOUNT_SOL_15_17=0.01

# Score 18-19: Valor em SOL para investir
AMOUNT_SOL_18_19=0.01

# Score 20-21: Valor em SOL para investir
AMOUNT_SOL_20_21=0.01

# Score <15: Valor em SOL (se habilitado)
AMOUNT_SOL_LOW=0.01
ENABLE_LOW_SCORE=false

# ============================================
# TRADING - Tempo Máximo para Compra (minutos)
# ============================================
# Regra de Timing: Bot só compra se token foi detectado dentro desta janela
# Score 15-17: Máximo X minutos desde detecção
MAX_TIME_MINUTES_15_17=3

# Score 18-19: Máximo X minutos desde detecção
MAX_TIME_MINUTES_18_19=5

# Score 20-21: Máximo X minutos desde detecção (geralmente 1 minuto)
MAX_TIME_MINUTES_20_21=1

# ============================================
# TRADING - Filtros
# ============================================
# Score mínimo para comprar
MIN_SCORE=15

# Score máximo para comprar
MAX_SCORE=21

# Slippage em basis points (1000 = 10%, 1500 = 15%, 2000 = 20%)
SLIPPAGE_BPS=1000

# ============================================
# STOP LOSS - Venda Automática por Tempo
# ============================================
# Se token não subir em X minutos, vende tudo
STOP_LOSS_TIME_MINUTES=5

# Múltiplo mínimo esperado (1.0 = não caiu, 0.9 = caiu 10%)
STOP_LOSS_MIN_MULTIPLE=1.0

# ============================================
# TAKE PROFIT - Score 15-17
# ============================================
# Quando token atinge 2x, vende 50%
TP1_MULTIPLE=2.0
TP1_SELL_PERCENT=50

# Quando token atinge 4x, vende 20%
TP2_MULTIPLE=4.0
TP2_SELL_PERCENT=20

# Quando token atinge 8x, vende 15%
TP3_MULTIPLE=8.0
TP3_SELL_PERCENT=15

# ============================================
# TAKE PROFIT - Score 18-19
# ============================================
TP1_MULTIPLE_18_19=1.5
TP1_SELL_PERCENT_18_19=50
TP2_MULTIPLE_18_19=3.0
TP2_SELL_PERCENT_18_19=50

# ============================================
# TAKE PROFIT - Score 20-21
# ============================================
TP1_MULTIPLE_20_21=1.5
TP1_SELL_PERCENT_20_21=50
TP2_MULTIPLE_20_21=2.5
TP2_SELL_PERCENT_20_21=50

# ============================================
# LIMITE DE PERDA DIÁRIO (Opcional)
# ============================================
# Se configurado, bot para de comprar quando atingir limite
# 0 = sem limite
MAX_DAILY_LOSS_SOL=0

# ============================================
# APIs OPCIONAIS (Melhoram Performance)
# ============================================
# BirdEye API (para preços mais precisos)
# Obtenha em: https://birdeye.so/
BIRDEYE_API_KEY=

# Jupiter API Key (para reduzir rate limits)
# Obtenha em: https://station.jup.ag/
JUPITER_API_KEY=




